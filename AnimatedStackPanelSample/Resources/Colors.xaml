<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AnimatedStackPanelSample.Resources">

    <SolidColorBrush x:Key="FlatButtonBackgroundBrush" Color="{DynamicResource DarkCyan}" />
    <SolidColorBrush x:Key="FlatButtonForegroundBrush" Color="{DynamicResource FontWhite}"  />
    <SolidColorBrush x:Key="FlatButtonPressedBackgroundBrush" Color="#222222" />
    <SolidColorBrush x:Key="FlatButtonPressedForegroundBrush" Color="White" />
    <SolidColorBrush x:Key="FlatButtonMouseoverForegroundBrush" Color="#20B2AA" />


    <Color x:Key="BlackColor">#FF000000</Color>
    <Color x:Key="Gray2">#FF7F7F7F</Color>
    <Color x:Key="Gray3">#FF9D9D9D</Color>
    <Color x:Key="Gray7">#FFD8D8D9</Color>
    <Color x:Key="FontWhite">#FDFEFE</Color>
    <Color x:Key="DarkCyan">#008B8B</Color>

    <SolidColorBrush x:Key="GrayBrush2" Color="{StaticResource Gray2}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource BlackColor}" />
    <SolidColorBrush x:Key="GrayBrush3" Color="{DynamicResource Gray3}"/>
    <SolidColorBrush x:Key="GrayBrush7" Color="{StaticResource Gray7}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{DynamicResource FontWhite}" />
    <SolidColorBrush x:Key="DarkCyanBrush" Color="{DynamicResource DarkCyan}" />

</ResourceDictionary>